@model DoAn_LapTrinhWeb.Models.Product

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Areas/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Sản phẩm</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Dashboard")"><u>Bảng điều khiển</u></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "ProductsAdmin")"><u>Sản phẩm</u></a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Xóa</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br/>
            <input type="submit" value="Xóa" class="btn btn-danger"/>
            <a class="btn btn-info" href="@Url.Action("Index", "ProductsAdmin")">
                <i class="fa fa-arrow-left"></i><span class="Bold"> Quay về</span>
            </a>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                         <small style="font-size:20px;color: red;">@Model.product_name</small>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#" class="dropdown-item">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-group">
                                            <lable>
                                                <b>Hình ảnh: </b>
                                            </lable>

                                            <img src="@Html.DisplayFor(model => model.image)" width="80px;"/>
                                        </div>
                                        <div class="form-group">
                                            <lable>
                                                <b>Mô tả sản phẩm: </b>
                                            </lable>

                                            @Html.DisplayFor(model => model.description)
                                        </div>

                                        <div class="form-group">
                                            <lable>
                                                <b>Số lượng: </b>
                                            </lable>

                                            @Html.DisplayFor(model => model.quantity)
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                <b>Giá gốc: </b>
                                            </label>

                                            @string.Format("{0:0,0₫}", Model.price)
                                        </div>

                                        <div class="form-group">
                                            <label>
                                                <b>Người tạo: </b>
                                            </label>

                                            @Html.DisplayFor(model => model.create_by)
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                <b>Ngày tạo: </b>
                                            </label>

                                            @Html.DisplayFor(model => model.create_at)
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                <b>Người cập nhật: </b>
                                            </label>

                                            @Html.DisplayFor(model => model.update_by)
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                <b>Ngày cập nhật: </b>
                                            </label>

                                            @Html.DisplayFor(model => model.update_at)
                                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

