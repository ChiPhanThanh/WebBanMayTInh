@model DoAn_LapTrinhWeb.DTOs.ProductDTOs

@{
    ViewBag.Title = "Chi tiết sản phẩm" + Model.product_name;
    Layout = "~/Areas/Areas/Views/Shared/LayoutAdmin.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Chi tiết</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard")">
                    <u>Bảng điều khiển</u>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "ProductsAdmin")">
                    <u>Sản phẩm</u>
                </a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Chi tiết</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-3">
        <br/>
        <a class="btn btn-info" href="@Url.Action("Index", "ProductsAdmin")">
            <i class="fa fa-arrow-left"></i><span class="Bold"> Quay về</span>
        </a>
        <a class="btn btn-danger" href="@Url.Action("Trash", "ProductsAdmin")"><i class="fa fa-trash"></i><span class="Bold"></span> Thùng rác</a>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <small style="font-size:20px;color: red;">@Model.product_name</small>

            </div>
            <div class="ibox-content">
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                <div class="form-group">
                    <lable>
                        <b>Hình ảnh: </b>
                    </lable>

                    <img src="@Html.DisplayFor(model => model.Image)" width="80px;"/>
                </div>
                <div class="form-group">
                    <lable>
                        <b>Mô tả sản phẩm: </b>
                    </lable>

                    @Html.DisplayFor(model => model.description)
                </div>
                <div class="form-group">
                    <lable>
                        <b>Thương hiệu: </b>
                    </lable>

                    @Html.DisplayFor(model => model.brand_name)
                </div>
                <div class="form-group">
                    <lable>
                        <b>Thể loại: </b>
                    </lable>

                    @Html.DisplayFor(model => model.genre_name)
                </div>
                <div class="form-group">
                    <lable>
                        <b>Số lượng: </b>
                    </lable>

                    @Html.DisplayFor(model => model.quantity)
                </div>
                <div class="form-group">
                    <label>
                        <b>Giá gốc: </b>
                    </label>

                    @string.Format("{0:0,0₫}", Model.price)
                </div>
                <div class="form-group">
                    <label>
                        <b>Chương trình khuyến mãi: </b>
                    </label>

                    @Html.DisplayFor(model => model.discount_name)
                </div>
                <div class="form-group">
                    <lable>
                        <b>Giá khuyến mãi: </b>
                    </lable>
                    @string.Format("{0:0,0₫}", Model.discount_price)

                </div>
                <div class="form-group">
                    <label>
                        <b>Người tạo: </b>
                    </label>

                    @Html.DisplayFor(model => model.create_by)
                </div>
                <div class="form-group">
                    <label>
                        <b>Ngày tạo: </b>
                    </label>

                    @Html.DisplayFor(model => model.create_at)
                </div>
                <div class="form-group">
                    <label>
                        <b>Người cập nhật: </b>
                    </label>

                    @Html.DisplayFor(model => model.update_by)
                </div>
                <div class="form-group">
                    <label>
                        <b>Ngày cập nhật: </b>
                    </label>

                    @Html.DisplayFor(model => model.update_at)
                </div>
            </div>
        </div>
    </div>
</div>


