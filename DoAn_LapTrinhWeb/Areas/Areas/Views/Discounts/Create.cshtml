@model DoAn_LapTrinhWeb.Model.Discount

@{
    ViewBag.Title = "Thêm mới thương hiệu";
    Layout = "~/Areas/Areas/Views/Shared/LayoutAdmin.cshtml";
}

@Html.Partial("_MessageAlert")
@using (Html.BeginForm("Create", "Discounts", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Thương hiệu</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                   <a href="@Url.Action("Index", "Dashboard")"><u>Bảng điều khiển</u></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Brands")"><u>Thương hiệu</u></a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Tạo mới</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br/>
            <button class="btn btn-success" type="submit">
                <i class="fa fa-plus-circle"></i><span class="Bold"> Thêm mới</span>
            </button>
            <a class="btn btn-info" href="@Url.Action("Index", "Discounts")">
                <i class="fa fa-arrow-left"></i><span class="Bold"> Quay về</span>
            </a>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-title">
                            <p>
                                <i class="text-danger"><strong>* </strong>Các mục đánh dấu (*) là bắt buộc</i>
                            </p>
                        </div>
                        <div class="ibox-content">
                            <form method="get">
                                <div class="row">
                                    <div class="col-md-9">
                                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                        <div class="form-group">
                                            <lable>Tên chương trình giảm giá <small style="color:red;">(*)</small></lable>
                                            <div>
                                                @Html.EditorFor(model => model.discount_name, new {htmlAttributes = new {@class = "form-control"}})
                                                @Html.ValidationMessageFor(model => model.discount_name, "", new {@class = "text-danger"})
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
}