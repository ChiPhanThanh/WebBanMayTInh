@model DoAn_LapTrinhWeb.Model.Discount

@{
    ViewBag.Title = "Xoá thương hiệu";
    Layout = "~/Areas/Areas/Views/Shared/LayoutAdmin.cshtml";
}

@Html.Partial("_MessageAlert")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Thương hiệu</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Dashboard")">
                        <u>Bảng điều khiển</u>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Discounts")">
                        <u>Chương trình giảm giá</u>
                    </a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Xóa</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br/>
            <input type="submit" value="Xóa" class="btn btn-danger"/>
            <a class="btn btn-info" href="@Url.Action("Index", "Discounts")"><i class="fa fa-arrow-left"></i><span class="Bold"></span> Quay về</a>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <small style="font-size:20px;color: red;">@Model.discount_name</small>
                    </div>
                    <div class="ibox-content">
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-group">
                            <label>
                                <b>Người tạo: </b>
                            </label>

                            @Html.DisplayFor(model => model.create_by)
                        </div>
                        <div class="form-group">
                            <label>
                                <b>Ngày tạo: </b>
                            </label>

                            @Html.DisplayFor(model => model.create_at)
                        </div>
                        <div class="form-group">
                            <label>
                                <b>Người cập nhật: </b>
                            </label>

                            @Html.DisplayFor(model => model.update_by)
                        </div>
                        <div class="form-group">
                            <label>
                                <b>Ngày cập nhât: </b>
                            </label>

                            @Html.DisplayFor(model => model.update_at)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}