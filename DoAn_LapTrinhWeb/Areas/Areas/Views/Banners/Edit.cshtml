@model DoAn_LapTrinhWeb.Model.Banner

@{
    ViewBag.Title = "Chỉnh sửa quảng cáo: " + Model.banner_name;
    Layout = "~/Areas/Areas/Views/Shared/LayoutAdmin.cshtml";
}

@Html.Partial("_MessageAlert")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Quảng cáo</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a>Bảng điều khiển</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Quảng cáo</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Chỉnh sửa</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br/>
            <button class="btn btn-success" type="submit">
                <i class="fa fa-save"></i><span class="Bold">Xác nhận</span>
            </button>
            <a class="btn btn-primary" href="@Url.Action("Index", "Banners")">
                <i class="fa fa-undo"></i><span class="Bold">Quay về</span>
            </a>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <p>
                            <i class="text-danger"><strong>* </strong>Các mục đánh dấu (*) không được bỏ trống</i>
                        </p>
                    </div>
                    <div class="ibox-content">
                        <form method="get">
                            <div class="row">
                                <div class="col-md-9">
                                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                    <div class="form-group">
                                        <label>
                                            <b>Tên quảng cáo: </b>
                                        </label>
                                        @Html.EditorFor(model => model.banner_name, new {htmlAttributes = new {@class = "form-control"}})
                                        @Html.ValidationMessageFor(model => model.banner_name, "", new {@class = "text-danger"})
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            <b>Ngày bắt đầu: </b>
                                        </label>
                                        @Html.EditorFor(model => model.banner_star, new {htmlAttributes = new {@class = "form-control"}})
                                        @Html.ValidationMessageFor(model => model.banner_star, "", new {@class = "text-danger"})
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            <b>Ngày kết thúc: </b>
                                        </label>
                                        @Html.EditorFor(model => model.banner_end, new {htmlAttributes = new {@class = "form-control"}})
                                        @Html.ValidationMessageFor(model => model.banner_end, "", new {@class = "text-danger"})
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            <b>Mô tả quảng cáo: </b>
                                        </label>
                                        @Html.EditorFor(model => model.description, new {htmlAttributes = new {@class = "form-control"}})
                                        @Html.ValidationMessageFor(model => model.description, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>
                                            <b>Trạng thái: </b>
                                        </label>
                                        <select class="form-control" name="Trạng thái">
                                            <option value="0">Không hoạt động</option>
                                            <option value="1">Hoạt động</option>
                                        </select>
                                        @Html.ValidationMessageFor(model => model.status, "", new {@class = "text-danger"})
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            <b>Hình ảnh</b>
                                        </label>
                                        @*<img  Chưa biết làm/>*@
                                        <input type="file" name="Img" class="form-control"/>
                                        @Html.ValidationMessageFor(model => model.image, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




