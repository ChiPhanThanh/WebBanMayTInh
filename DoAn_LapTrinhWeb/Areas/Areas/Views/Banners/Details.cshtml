@model DoAn_LapTrinhWeb.Model.Banner

@{
    ViewBag.Title = "Chi tiết quảng cáo" + Model.banner_name;
    Layout = "~/Areas/Areas/Views/Shared/LayoutAdmin.cshtml";
}

@Html.Partial("_MessageAlert")
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Quảng cáo</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a> Bảng điều khiển</a>
            </li>
            <li class="breadcrumb-item">
                <a>Quảng cáo</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Chi tiết</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-3">
        <br/>
        <a class="btn btn-success" href="@Url.Action("Edit", "Banners")">
            <i class="fa fa-edit"></i><span class="Bold">Chỉnh sửa</span>
        </a>
        <a class="btn btn-danger" href="@Url.Action("Index", "Banners")">
            <i class="fa fa-reply"></i><span class="Bold">Quay về</span>
        </a>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5 style="color:blue;">@Model.banner_name</h5>
                </div>
                <div class="ibox-content">
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <table class="table table-bordered table-hover">

                        <tr>
                            <th scope="col">
                                <b>Tên quảng cáo: </b>
                            </th>
                            <td scope="col"> @Html.DisplayFor(model => model.banner_name)</td>
                        </tr>
                        <tr>
                            <th scope="col">
                                <b>Chi tiết quảng cáo: </b>
                            </th>
                            <td scope="col"> @Html.DisplayFor(model => model.description)</td>
                        </tr>
                        <tr>
                            <th scope="col">
                                <b>Ngày bắt đầu: </b>
                            </th>
                            <th scope="col"> @Html.DisplayFor(model => model.banner_star)</th>
                        </tr>
                        <tr>
                            <th scope="col">
                                <b>Ngày kết thúc: </b>
                            </th>
                            <th scope="col"> @Html.DisplayFor(model => model.banner_end)</th>
                        </tr>
                        <tr>
                            <th scope="col">
                                <b>Người tạo: </b>
                            </th>
                            <th scope="col"> @Html.DisplayFor(model => model.create_by)</th>
                        </tr>
                        <tr>
                            <th scope="col">
                                <b>Ngày tạo: </b>
                            </th>
                            <th scope="col">@Html.DisplayFor(model => model.create_at)</th>
                        </tr>
                        <tr>
                            <th scope="col">
                                <b>Trạng thái: </b>
                            </th>
                            <th scope="col">
                                @if (Model.status == "0")
                                {
                                    <a>Không hoạt động</a>
                                }
                                else
                                {
                                    <a>Hoạt động</a>
                                }
                            </th>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


