@model DoAn_LapTrinhWeb.DTOs.UserDTOs

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Areas/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Khách hàng</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a>Bảng điều khiển</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Khách hàng</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Xóa</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br />
            <input type="submit" value="Xóa" class="btn btn-primary  btn-sm fas fa-plus-circle" />
            <a class="btn btn-success" href="@Url.Action("Index", "Users")"><i class="fa fa-mail-reply"> <span class="Bold">Quay về</span></i></a>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5 style="color:blue;">@Model.Name</h5>
                    </div>
                    <div class="ibox-content">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>
                                <b>Tên người dùng: </b>
                            </label>
                            @Html.DisplayFor(model => model.Name)
                        </div>
                        <div class="form-group">
                            <lable>
                                <b>Tên đăng nhập: </b>
                            </lable>
                            @Html.DisplayFor(model => model.username)
                        </div>
                        <div class="form-group">
                            <lable><b>Email: </b></lable>
                            @Html.DisplayFor(model => model.Email)
                        </div>
                        <div class="form-group">
                            <label><b>Số điện thoại: </b></label>                          
                            @Html.DisplayFor(model => model.Phone)
                        </div>
                        <div class="form-group">
                            <label><b>Quyền</b></label>
                            @Html.DisplayFor(model => model.Role)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

