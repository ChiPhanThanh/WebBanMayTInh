                        </div>
                    </div>
                </div>
            </div>

            <div class="row ">
                @foreach (var item in sanphamhot)
                {
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12 margin_bottom_30_all">
                        <div class="product_list">
                            <a href="~/@SlugGenerator.SlugGenerator.GenerateSlug(item.product_name)-@item.product_id">
                                <div class="product_img">

                                    <img class="img-responsive"
                                         src="@(item.image != null? item.image : defaultImg)" alt="">
                                </div>
                                <div class="product_detail_btm">
                                    <div class="center">
                                        <p>

                                            @item.product_name

                                        </p>
                                    </div>
                                    <div class="starratin">
                                        <div class="center">
                                            <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star"
                                            aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star-o" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                    <div class="product_price">
                                        <p>
                                            @if (item.Discount != null)
                                            {
                                                if (item.Discount.discount_star < DateTime.Now && item.Discount.discount_end > DateTime.Now)
                                                {
                                                    <span class="old_price">@item.price.ToString("#,###₫")</span> <span class="new_price">@((item.price - item.Discount.discount_price).ToString("#,0 ₫"))</span>
                                                }
                                                else
                                                {
                                                    <span class="new_price">@item.price.ToString("#,###₫")</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="new_price">@item.price.ToString("#,###₫")</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
